                            </StackPanel>

                            <StackPanel HorizontalAlignment="Left" Margin="90,5,0,0" Orientation="Horizontal">
                                <TextBlock FontWeight="SemiBold" Margin="5" TextAlignment="Left" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Text="Postinumero" Style="{StaticResource txtBlockFontSetting}" />
                                <TextBox x:Name="txtPostal"  Margin="5" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" MaxLength="15" PreviewTextInput="NumberValidationTextBox" Style="{StaticResource txtBoxFontSetting}"/>
                            </StackPanel>

                            <StackPanel HorizontalAlignment="Left" Margin="90,5,0,0" Orientation="Horizontal">
                                <TextBlock FontWeight="SemiBold" Margin="5" TextAlignment="Left" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Text="Kaupunki" Style="{StaticResource txtBlockFontSetting}" />
                                <TextBox x:Name="txtCity"  Margin="5" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" MaxLength="50" Style="{StaticResource txtBoxFontSetting}"/>
                            </StackPanel>

                            <StackPanel HorizontalAlignment="Left" Margin="90,5,0,0" Orientation="Horizontal">
                                <TextBlock FontWeight="SemiBold" Margin="5" TextAlignment="Left" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Text="Puhelinnumero" Style="{StaticResource txtBlockFontSetting}" />
                                <TextBox x:Name="txtPhone" Margin="5" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" MaxLength="15" Style="{StaticResource txtBoxFontSetting}"/>
                            </StackPanel>

                            <StackPanel HorizontalAlignment="Left" Margin="90,5,0,0" Orientation="Horizontal">
                                <TextBlock FontWeight="SemiBold" Margin="5" TextAlignment="Left" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Text="Sähköposti" Style="{StaticResource txtBlockFontSetting}" />
