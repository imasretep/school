                            <StackPanel Orientation="Horizontal">
                                <Button Content="Lisää" Width="150" VerticalAlignment="Top" Margin="5" Click="AddNewCustomer_Click" />
                            </StackPanel>
                        </StackPanel>-->

                        </StackPanel>

                        <!--Alabanneri-->
                        <Canvas>
                            <Rectangle Width="987" Height="60" Fill="Orange" HorizontalAlignment="Center" VerticalAlignment="Center"  Margin="0,25,0,0"/>
                            <Line X1="65" Y1="20" X2="90" Y2="95" Stroke="white" StrokeThickness="6"/>
                            <Line X1="75" Y1="20" X2="100" Y2="95" Stroke="white" StrokeThickness="3"/>
                            <Button Content="Sulje" Canvas.Right="15" Canvas.Top="40" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource StylizedButton1}" Width="150" Height="30" BorderBrush="white" Click="CloseWindow_Click"/>
