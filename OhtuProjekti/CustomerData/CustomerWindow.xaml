                                <TextBox x:Name="txtFirstName"  Margin="5" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" MaxLength="25" Style="{StaticResource txtBoxFontSetting}"/>
                            </StackPanel>

                            <StackPanel HorizontalAlignment="Left" Margin="90,5,0,0" Orientation="Horizontal">
                                <TextBlock FontWeight="SemiBold" Margin="5" TextAlignment="Left" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Text="Sukunimi" Style="{StaticResource txtBlockFontSetting}" />
                                <TextBox x:Name="txtLastName"  Margin="5" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" MaxLength="25" Style="{StaticResource txtBoxFontSetting}"/>
                            </StackPanel>

                            <StackPanel HorizontalAlignment="Left" Margin="90,5,0,0" Orientation="Horizontal">
                                <TextBlock FontWeight="SemiBold" Margin="5" TextAlignment="Left" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Text="Yritys" Style="{StaticResource txtBlockFontSetting}" />
                                <TextBox x:Name="txtCompanyName"  Margin="5" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top"  MaxLength="25" Style="{StaticResource txtBoxFontSetting}"/>
                            </StackPanel>

                            <StackPanel HorizontalAlignment="Left" Margin="90,5,0,0" Orientation="Horizontal">
                                <TextBlock FontWeight="SemiBold" Margin="5" TextAlignment="Left" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Text="Osoite" Style="{StaticResource txtBlockFontSetting}" />
